{
    "scripts": {
        "js:vite": "vite build --logLevel error --mode dist",
        "js:minify": "terser --compress --mangle --comments false --output ./_public/tablewrap.js ./_public/tablewrap.js",
        "js:babel": "npx babel ./_js/ --out-dir ./_build/_js/",
        "js:demo:vite": "vite build --logLevel error --mode demo",
        "js": "npm-run-all --sequential js:vite js:minify js:babel js:demo:vite",
        "js:dev": "npm-run-all --sequential js:vite js:babel js:demo:vite",
        "html": "html-minifier-next --collapse-whitespace --output ./_public/index.html ./_html/index.html",
        "html:dev": "html-minifier-next --output ./_public/index.html ./_html/index.html",
        "watch:js": "onchange ./_js/*.js ./_js/**/*.js --initial --poll 250 --delay 250 --await-write-finish 500 -- onerror \"npm run js:dev --silent\" --title \"watch:js\" --message \"build failed\" --sound mute",
        "watch:html": "onchange ./_html/*.html ./_html/**/*.html --initial --poll 250 --delay 250 --await-write-finish 500 -- onerror \"npm run html:dev --silent\" --title \"watch:html\" --message \"build failed\" --sound mute",
        "prod": "npm-run-all --parallel js html",
        "dev": "npm-run-all --parallel watch:*"
    },
    "devDependencies": {
        "@babel/cli": "^7.28.6",
        "@babel/core": "^7.29.0",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
        "@babel/plugin-proposal-optional-chaining": "^7.21.0",
        "@babel/plugin-transform-runtime": "^7.29.0",
        "@babel/polyfill": "^7.12.1",
        "@babel/preset-env": "^7.29.0",
        "@babel/runtime": "^7.28.6",
        "babelify": "^10.0.0",
        "browser-sync": "^3.0.4",
        "cli-error-notifier": "^3.0.2",
        "eslint": "^10.0.0",
        "html-minifier-next": "^5.0.3",
        "mdn-polyfills": "^5.20.0",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.1.0",
        "postcss-cli": "^11.0.1",
        "postcss-url": "^10.1.3",
        "terser": "^5.46.0",
        "vite": "^7.3.1"
    },
    "name": "tablewrap",
    "version": "1.0.5",
    "description": "",
    "main": "_build/_js/tablewrap.js",
